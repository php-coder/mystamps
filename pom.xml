	<url>my-stamps.ru</url>
	<inceptionYear>2009</inceptionYear>
	
	<developers>
		<developer>
			<name>Slava Semushin</name>
			<email>slava.semushin@gmail.com</email>
			<url>http://my-stamps.ru</url>
			<roles>
				<role>founder</role>
				<role>developer</role>
			</roles>
			<timezone>+3</timezone>
		</developer>
	</developers>
	
	<licenses>
		<license>
			<name>GNU GPL v2</name>
			<url>http://www.gnu.org/licenses/gpl-2.0.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<prerequisites>
		<maven>2.2.1</maven>
	</prerequisites>
	
	<scm>
		<connection>scm:git:git://github.com/php-coder/mystamps.git</connection>
		<url>https://github.com/php-coder/mystamps</url>
	</scm>
	
	<repositories>
		
		<repository>
			<id>SpringSource Milestone Repository</id>
			<url>http://repo.springsource.org/milestone</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</snapshots>
		</repository>
		
	</repositories>
	
	<distributionManagement>
		<snapshotRepository>
			<id>localRepository</id>
			<url>file://${HOME}/.m2/repository</url>
		</snapshotRepository>
	</distributionManagement>
	
	<!--
		 There are 2 profiles:
		 - dev (uses MySQL)
		 - test (enabled by default, uses H2)
	-->
	<profiles>
		
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<env.dir>${env.root.dir}/dev/WEB-INF/classes</env.dir>
				<ddl.file>mysql-scheme.sql</ddl.file>
			</properties>
			<build>
				<plugins>
					
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.5</version>
						<executions>
							<execution>
								<id>copy-dev-resources</id>
								<phase>validate</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>
										${project.build.outputDirectory}
									</outputDirectory>
									<resources>
										<resource>
											<directory>${env.dir}</directory>
											<excludes>
												<exclude>*.sql</exclude>
											</excludes>
										</resource>
